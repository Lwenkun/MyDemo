<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <thereisnospon.codeview.CodeView
        android:id="@+id/rich_text_resource_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_change_text_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rich_text_note" />

    <thereisnospon.codeview.CodeView
        android:id="@+id/spanned_text_source_code"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/tv_spanned_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>